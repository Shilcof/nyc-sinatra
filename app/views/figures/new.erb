<h2>Create a new Historical Figure</h2>

<form action="/figures" method="POST">
    <label for="name">Name</label>
    <input type="text" id="figure_name" name="figure[name]"><br>
    <label>Add Landmarks:</label><br>
    <% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %></label>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>">
    <% end %>
    <label>Add New:</label>
    <input type="text" id="new_landmark" name="landmark[name]"><br>
    
    <label>Edit Titles</label><br>
    <% Title.all.each do |title| %>
        <label><%= title.name %></label>
        <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>">
    <% end %>
    <label>Add New Title:</label>
    <input type="text" id="new_title" name="title[name]"><br>

    <input type="submit" value="Create New Figure">
    
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>