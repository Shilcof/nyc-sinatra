<h2>All Historical Figures</h2>


<% @figures.each do |figure| %>
    <a href="/figures/<%= figure.id %>"><%= figure.name %></a>
    <ul>
        <%figure.titles.each do |title|%>
            <li><%=title.name%></li>
        <%end%>
    </ul>
<% end %>

<a class="button" href="figures/new">Create New Figure</a>
